@model EmployeeFormModel

<div class="form-box">
    <form asp-controller="Employee" asp-action=@((Model.Id == null || Model.Surname == null) ? "Create" : "Edit") asp-route-id="@Model.Id" method="post">
        <div class="d-flex">
            <div class="form-group">
                <p>Imię:</p>
                <input class="form-control" type="text" asp-for="@Model.Name" />
            </div>
            <div class="form-group">
                <p>Nazwisko:</p>
                <input class="form-control" type="text" asp-for="@Model.Surname" />
            </div>
        </div>
        <div class="form-group">
            <p>Stanowisko:</p>
            <input class="form-control" type="text" asp-for="@Model.WorkPosition" />
        </div>
        <div>
            <label class="switch" id="getReserve">
                <input type="checkbox" id="toggleSwitcher" asp-for="@Model.IsUser" />
                <span class="slider round"></span>
            </label>
              Szybka rezerwacja
        </div>
            <div id="quickReserve">
                <div class="form-group">
                    <p>Email:</p>
                    <input class="form-control" type="text" asp-for="@Model.Register.Email" />
                </div>
                <div class="form-group">
                    <p>Login:</p>
                    <input class="form-control" type="text" asp-for="@Model.Register.UserName" />
                </div>
                <div class="form-group">
                    <p>Hasło:</p>
                    <input class="form-control" type="password" asp-for="@Model.Register.Password" />
                </div>
                <div class="form-group">
                    <p>Powtórz hasło:</p>
                    <input class="form-control" type="password" asp-for="@Model.Register.RetypePassword" />
                </div>
                <div class="form-group">
                    <p>Data urodzenia:</p>
                    <input class="form-control" type="date" asp-for="@Model.Register.DateOfBirth" />
                </div>
            </div>
        <div class="form-group">
            <input class="btn btn-primary" type="submit" value="Zarejestruj!" />
        </div>
    </form>
</div>

<script src="~/js/ReserveSwitcher.js" asp-append-version="true"></script>