@model LoginModel
@{
    ViewData["Title"] = "Zaloguj się";
}

<h1 class="text-center">Witaj w Flyy! Zaloguj się!</h1>

<div class="form-box">
    <form asp-controller="Account" asp-action="Login" method="post">
        <div class="form-group">
            <p>Login:</p>
            <input class="form-control" type = "text" asp-for="@Model.UserName"/>
        </div>
        <div class="form-group">
            <p>Hasło:</p>
            <input class="form-control" type = "password" asp-for="@Model.Password"/>
        </div>
        <div class="form-group">
            <input class="btn btn-primary" type ="submit" value="Zaloguj!" />
        </div>
    </form>
    <p class="text-center">Nie masz jeszcze konta! <a class="text-primary" asp-action="Register">Zarejestruj się!</a></p>
</div>


