@model RegisterModel

<div class="form-box">
    <form asp-controller="Account" asp-action="Register" method="post">
        <div class="d-flex">
            <div class="form-group">
                <p>Imię:</p>
                <input class="form-control" type="text" asp-for="@Model.Name" />
            </div>
            <div class="form-group">
                <p>Nazwisko:</p>
                <input class="form-control" type="text" asp-for="@Model.Surname" />
            </div>
        </div>
        <div class="form-group">
            <p>Email:</p>
            <input class="form-control" type="text" asp-for="@Model.Email" />
        </div>
        <div class="form-group">
            <p>Login:</p>
            <input class="form-control" type="text" asp-for="@Model.UserName" />
        </div>
        <div class="form-group">
            <p>Hasło:</p>
            <input class="form-control" type="password" asp-for="@Model.Password" />
        </div>
        <div class="form-group">
            <p>Powtórz hasło:</p>
            <input class="form-control" type="password" asp-for="@Model.RetypePassword" />
        </div>
        <div class="form-group">
            <p>Data urodzenia:</p>
            <input class="form-control" type="date" asp-for="@Model.DateOfBirth" />
        </div>
        <div class="form-group">
            <input class="btn btn-primary" type="submit" value="Zarejestruj!" />
        </div>
    </form>
</div>