@model ReflectionIT.Mvc.Paging.PagingList<Flight>
@using ReflectionIT.Mvc.Paging
@addTagHelper *,ReflectionIT.Mvc.Paging

<h2>Wyloty</h2>

<nav aria-label="User Paging">
    @await this.Component.InvokeAsync("Pager", new { pagingList = this.Model })
</nav>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Wylot</th>
            <th scope="col">Cel</th>
            <th scope="col">Samolot</th>
            <th scope="col">Data wylotu</th>
            <th scope="col">Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.FromCountry - @item.FromCity</td>
            <td>@item.ToCountry - @item.ToCity</td>
            <td>@item.Airplane.PlaneName</td>
            <td>@item.DepartureDate</td>
            <td class="d-flex justify-content-around">
                <a asp-controller="Flight" asp-action="EditFlightView" asp-route-id="@item.Id">
                    Edytuj
                </a>
                <a asp-controller="Flight" asp-action="GetFlight" asp-route-id="@item.Id">Szczegóły</a>
                <a asp-controller="Flight" asp-action="DeleteFlight" asp-route-id="@item.Id">Usuń</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<nav aria-label="Suppliers navigation example">
    <vc:pager paging-list="@Model" />
</nav>