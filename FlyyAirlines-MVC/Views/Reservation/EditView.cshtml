@model ReservationFormModel

<div class="form-box">
    <form asp-controller="Reservation" asp-action=@(Model.Id == null ? "Create" : "Edit") asp-route-id="@Model.Id" method="post">
        <div class="d-flex">
            <div class="form-group">
                <p>Imię:</p>
                <input class="form-control" type="text" asp-for="@Model.Name" />
            </div>
            <div class="form-group">
                <p>Nazwisko:</p>
                <input class="form-control" type="text" asp-for="@Model.Surname" />
            </div>
        </div>
        <div class="form-group">
            <p>Nr identyfikacyjny:</p>
            <input class="form-control" type="number" asp-for="@Model.PersonIdentify" />
        </div>
        <div class="form-group">
            <p>Miejsce:</p>
            <input class="form-control" type="number" asp-for="@Model.Seat" />
        </div>
        <div class="form-group">
            <p>Wylot</p>
            <select class="form-control" asp-for="@Model.FlightId">
                @foreach (var item in Model.Flights)
                {
                    <option value="@item.Id">@item.FlightName</option>
                }
            </select>
        </div>
        <div class="form-group">
            <input class="btn btn-primary" type="submit" value="Zarejestruj!" />
        </div>
    </form>
</div>